FROM mysql:9.2.0 AS mysql_container
ENV MYSQL_ROOT_PASSWORD=root
ENV MYSQL_DATABASE=teste
ENV MYSQL_USER=john
ENV MYSQL_PASSWORD=doe123

EXPOSE 3306

FROM phpmyadmin:5.2.2 AS phpmyadmin_container
ENV MYSQL_ROOT_PASSWORD=root
ENV MYSQL_USER=john
ENV MYSQL_PASSWORD=doe123
ENV PMA_HOST=mysql_container

EXPOSE 80